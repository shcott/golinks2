{
  "manifest_version": 2,
  "name": "Golinks 2",
  "description": "Your private URL shortener.",
  "version": "2.0.0",

  "icons": {
    "16": "img/icon16.png",
    "48": "img/icon48.png",
    "128": "img/icon128.png",
    "256": "img/icon256.png"
  },

  "permissions": [
    "chrome://favicon/",
    "activeTab",
    "bookmarks",
    "storage"
  ],

  "background": {
    "persistent": false,
    "scripts": [
      "js/asyncify.js",
      "js/chromeapi.js",
      "js/store.js",
      "js/onboarding.js",
      "js/main.js"
    ]
  },

  "browser_action": {
    "default_title": "Golinks",
    "default_popup": "popup.html"
  },

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+L",
        "mac": "Command+Shift+Space",
        "windows": "Ctrl+Shift+L",
        "windows": "Ctrl+Shift+L"
      }
    }
  },

  "content_security_policy": "script-src 'self'; object-src 'self'"
}
